{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
	"parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["src/plugins/pluginsConfig.json", "src/bin", "public/"],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
